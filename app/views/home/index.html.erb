<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secret Spots</title>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            text-align: center;
        }
        h1 {
            color: #007BFF; 
            font-size: 4em;
            margin-top: 20px;
        }
        #map {
            margin: 40px auto;
            width: 600px;
            height: 400px;
            border: 2px solid #b0b0b0;
        }
        #secrets-list {
            margin: 40px auto;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .secret-box {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 15px;
            width: 300px;
            text-align: center;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
            cursor: pointer;
            background-color: white;
            transition: transform 0.2s;
        }
        .secret-box:hover {
            transform: scale(1.05);
            box-shadow: 4px 4px 20px rgba(0,0,0,0.2);
        }
        .secret-box h2 {
            font-size: 20px;
            margin-bottom: 10px;
            color: #007bff;
        }
        .secret-box p {
            margin-bottom: 15px;
            font-size: 14px;
            color: #555;
        }
    </style>
</head>
<body>
    <h1>Secret Spots</h1>
    <div id="map"></div>

    <!-- Secrets Overview Section -->
    <div id="secrets-list">
        <% @secrets.each do |secret| %>
            <div class="secret-box" onclick="window.location.href='<%= secret_path(secret) %>'">
                <h2><%= secret.name %></h2>
                <p><%= truncate(secret.description, length: 100) %></p>
                <p><strong>Created by:</strong> <%= User.find(secret.user_id).email %></p>
            </div>
        <% end %>
    </div>

    <script>
        let map;
        let markers = [];
        let circle;

        function initMap() {
            const center = { lat: 50.8503, lng: 4.3517 };
            map = new google.maps.Map(document.getElementById("map"), {
                center: center,
                zoom: 12,
            });

            circle = new google.maps.Circle({
                map: map,
                center: center,
                radius: 2000,
                fillColor: '#a9a9a9',
                fillOpacity: 0.5,
                strokeColor: '#000000',
                strokeOpacity: 0.8,
                strokeWeight: 2,
            });

            fetchAndUpdateMarkers();
            setInterval(fetchAndUpdateMarkers, 5000);
        }

        function fetchAndUpdateMarkers() {
            fetch("<%= secrets_map_data_path %>")
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`Network response was not ok: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    markers.forEach(marker => marker.setMap(null));
                    markers = [];

                    const secretsList = document.getElementById("secrets-list");
                    secretsList.innerHTML = ""; // Clear the existing list

                    data.forEach(secret => {
                        const secretPosition = {
                            lat: parseFloat(secret.latitude),
                            lng: parseFloat(secret.longitude),
                        };

                        const distance = google.maps.geometry.spherical.computeDistanceBetween(
                            new google.maps.LatLng(circle.getCenter()),
                            new google.maps.LatLng(secretPosition)
                        );

                        const color = distance <= circle.getRadius() ? 'red' : 'blue';

                        const marker = new google.maps.Marker({
                            position: secretPosition,
                            map: map,
                            title: secret.name,
                            icon: {
                                path: google.maps.SymbolPath.CIRCLE,
                                scale: 6,
                                fillColor: color,
                                fillOpacity: 1,
                                strokeWeight: 0,
                            },
                        });

                        marker.addListener("click", () => {
                            window.location.href = `/secrets/${secret.id}`;
                        });

                        markers.push(marker);

                        // Add secret to the secrets list
                        const secretBox = document.createElement("div");
                        secretBox.className = "secret-box";
                        secretBox.innerHTML = `
                            <h2>${secret.name}</h2>
                            <p>${secret.description.length > 100 ? secret.description.slice(0, 100) + '...' : secret.description}</p>
                            <p><strong>Created by:</strong> ${secret.user_email}</p>
                        `;
                        secretBox.onclick = () => {
                            window.location.href = `/secrets/${secret.id}`;
                        };
                        secretsList.appendChild(secretBox);
                    });
                })
                .catch(error => {
                    console.error('Error fetching secrets:', error);
                });
        }
    </script>

    <script async
        src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap&libraries=geometry">
    </script>
</body>
</html>

<div id="ifNotLoginOptions">
<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class:"loginOptionsButton"%><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class:"loginOptionsButton"%><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class:"loginOptionsButton" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>
</div>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="OmniAuth">
      <div ><%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider).delete_suffix("Oauth2")}", omniauth_authorize_path(resource_name, provider), data: { turbo: false },class:"omniAuthButton" %></div>
      <div class="inside"><%= image_tag(if provider == :github then "github.png" else "google.png"end , :alt => "google Image", width:"50", height:"50",position:"relative")  %></div>
    </div>
  <% end %>
<% end %>


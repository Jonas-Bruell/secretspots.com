<%= form_with(model: adventure) do |form| %>
  <% if adventure.errors.any? %>
    <div style="color: red">
      <h2><%= t('.messages.errors', count: adventures.errors.count)%></h2>

      <ul>
        <% adventure.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t('global.name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :body, t('global.body'), style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit t('.submit') %>
  </div>
<% end %>

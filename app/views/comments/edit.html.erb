<h1>Edit Your Comment</h1>

<%= form_with model: [@secret, @comment], local: true do |form| %>
  <div>
    <%= form.label :content, 'Your Comment' %>
    <%= form.text_area :content, rows: 3 %>
  </div>
  <div>
    <%= form.submit 'Update Comment' %>
  </div>
<% end %>

<%= link_to 'Back to Secret', @secret %>

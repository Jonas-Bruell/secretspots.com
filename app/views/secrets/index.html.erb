<p style="color: green;"><%= notice %></p>

<% content_for :title, "Secrets" %>

<div style="text-align: center; margin-bottom: 20px;">
  <h1 style="color: #007bff; font-weight: bold;">Secrets</h1>
</div>

<div style="margin-bottom: 20px;">
  <%= link_to "New secret", new_secret_path, style: "display: inline-block; padding: 10px 15px; background-color: #6CA6CD; color: white; border-radius: 5px; text-decoration: none; font-size: 16px;" %>
</div>

<div id="secrets">
  <% @secrets.each do |secret| %>
    <div style="background-color: #f2f2f2; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 15px; padding: 10px;">
      <%= render secret %>
      <p>
        <%= link_to "Show this secret", secret, style: "display: inline-block; color: #0056b3; text-decoration: none; border: 1px solid #0056b3; padding: 5px 10px; border-radius: 4px;" %>
      </p>
    </div>
  <% end %>
</div>

<style>
  a:hover {
    background-color: #5A9BD5;
    color: #fff;
    transition: 0.2s;
  }

  #secrets {
    margin-top: 15px;
  }

  h1 {
    font-size: 28px;
  }
</style>

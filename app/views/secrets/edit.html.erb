<%= stylesheet_link_tag 'secret_new', media: 'all' %>

<% content_for :title, t('.title') %>

<div class="new-secret-page">
  <!-- Back Link -->
  <div>
    <%= link_to secrets_path, class: 'return-link' do %>
      &#8592; <%= t('secrets.back-link') %>
    <% end %>
  </div>

  <!-- Page Header -->
  <h1 class="page-header"><%= t('.edit') %></h1>

  <!-- Layout Container -->
  <div class="form-layout">
    <!-- Form Section -->
    <div class="form-column">
      <%= form_with(model: @secret, local: true) do |form| %>
        <div class="form-group" style="margin-bottom: 15px;">
          <%= form.label :name, "Name:" %>
          <%= form.text_field :name, required: true, class: "form-input", style: "width: 100%;" %>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
          <%= form.label :description, "Description:" %>
          <%= form.text_area :description, rows: 5, class: "form-input", required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
          <%= form.label :image, "Upload Picture:" %>
          <%= form.file_field :image, class: "form-input", style: "width: 100%;" %>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
          <%= form.label :latitude, "Latitude:" %>
          <%= form.text_field :latitude, id: "secret_latitude", readonly: true, class: "readonly-input", style: "width: 100%;" %>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
          <%= form.label :longitude, "Longitude:" %>
          <%= form.text_field :longitude, id: "secret_longitude", readonly: true, class: "readonly-input", style: "width: 100%;" %>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
          <%= form.label :address, "Address:" %>
          <%= form.text_field :address, id: "secret_address", readonly: true, class: "readonly-input", style: "width: 100%;" %>
        </div>

       
        

        <div class="form-actions" style="margin-top: 15px;">
          <%= form.submit "Edit Secret", class: "btn btn-primary", style: "padding: 10px 20px; background-color: #007BFF; color: white; border: none; border-radius: 5px; cursor: pointer;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

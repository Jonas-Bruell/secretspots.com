<p style="color: green;"><%= notice %></p>

<div style="display: flex; justify-content: space-between; align-items: flex-start;">
  <div>
    <%= link_to "&#x2190;".html_safe, secrets_path, style: "text-decoration: none; font-size: 20px; color: #007bff; font-weight: bold; display: inline-block; margin-bottom: 20px;" %>
  </div>

  <div style="flex: 1; margin-left: 20px;">
    <%= render @secret %>

    <div style="display: flex; gap: 10px; margin-top: 20px;">
      <%= link_to "Edit this secret", edit_secret_path(@secret), style: "padding: 10px 20px; background-color: #007bff; color: white; border-radius: 5px; text-decoration: none; font-size: 16px;" %>
      <%= button_to "Destroy this secret", @secret, method: :delete, style: "padding: 10px 20px; background-color: #dc3545; color: white; border-radius: 5px; font-size: 16px; border: none;" %>
    </div>
  </div>
</div>

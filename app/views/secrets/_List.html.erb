<% content_for :title, "Secrets" %>

<h1>Secrets:</h1>

<div id="secrets">
  <% @secrets.each do |secret| %>
    <%= render secret %>
    <p>
      <%= link_to t(:show), secret %>
    </p>
  <% end %>
</div>

<%= link_to "New secret",  if user_signed_in? then new_secret_path else new_user_session_path end  %>

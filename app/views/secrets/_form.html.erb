<%= form_with(model: secret) do |form| %>
  <% if secret.errors.any? %>
    <div style="color: red">
      <h2><%= t('.messages.errors', count: secret.errors.count)%></h2>

      <ul>
        <% secret.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Name of secret:", t('global.name'), style: "display: block" %>
    <%= form.text_field :name, id: "Name" %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :Description, t('global.body'), style: "display: block" %>
    <%= form.text_area :body , id:"Body" %>
  </div>
  
  <div>
    <%= form.submit t('.submit') %>
  </div>

<% end %>
